	name = Piotr Szczygie≈Ç
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDR5PjSdM3RBmg6MlNazABdkKnm0c5DK6T6tebaASZsd

[apply]
	whitespace = warn

[core]
	autocrlf = input
	editor = nvim
	fsmonitor = true
	longPaths = true
	pager = delta
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[commit]
	gpgsign = true

[push]
	default = simple
	autoSetupRemote = true

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[gpg]
	format = ssh

[gpg "ssh"]
	program = C:/Users/szczy/AppData/Local/1Password/app/8/op-ssh-sign.exe
